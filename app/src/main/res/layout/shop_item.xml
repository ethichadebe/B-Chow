<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/rlStatus"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_effect_white"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:contentDescription="@string/logo"
                android:src="@drawable/food" />

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivLogo"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/Black"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvShopName"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvShortDescript"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/Black"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvShortDescript"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/Grey"
                        android:fontFamily="sans-serif-light"
                        android:padding="2dp"
                        android:textColor="@color/Black"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvAveTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/Green"
                        android:fontFamily="sans-serif-light"
                        android:padding="2dp"
                        android:textColor="@color/Black"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llStars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llHead"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStar5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/star1"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/ivStar4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/star2"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/ivStar3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/star3"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/ivStar2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/star4"
                        android:src="@drawable/star" />

                    <ImageView
                        android:id="@+id/ivStar1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/star5"
                        android:src="@drawable/star" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llOpHours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llStars"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/rlHeading1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cvPass"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="5dp"
                            android:layout_toStartOf="@id/tvHeading3"
                            android:background="@color/Grey" />

                        <TextView
                            android:id="@+id/tvHeading3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="12dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            android:text="@string/operating_hours"
                            android:textColor="@color/Black"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="wrap_content"
                            android:layout_height="1dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/tvHeading3"
                            android:background="@color/Grey" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/monday"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvMon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/tuesday"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvTue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/wednesday"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvWed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/thursday"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvThu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/friday"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvFri"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/saturday"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvSat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/sunday"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvSun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:text="@string/public_holiday"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/tvPH"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="sans-serif-light"
                                android:textColor="@color/Black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llDropDown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llOpHours"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvMore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/ripple_effect_white"
                        android:fontFamily="sans-serif-light"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/show_more"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCompleteReg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llDropDown"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ripple_effect_red"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Click here to complete shop registration"
                    android:textColor="@color/White"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
