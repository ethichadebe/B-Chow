<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:background="@drawable/ripple_effect_white"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/ripple_effect_white"
        android:padding="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Shop"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_centerHorizontal="true"
                android:textColor="@color/Black"/>

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:layout_alignParentEnd="true"
                android:textColor="@color/Black"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.5"
                android:layout_gravity="center"
                android:src="@drawable/food"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvShortDescript"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="This is a short description about my shop to attract custommers"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2Km"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="5dp"
                        android:background="@color/Grey"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/Black"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/tvAveTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10 - 15 mins"
                        android:textSize="12sp"
                        android:padding="2dp"
                        android:layout_gravity="start"
                        android:layout_marginLeft="5dp"
                        android:background="@color/Green"
                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/Black"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivStar1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"/>

                    <ImageView
                        android:id="@+id/ivStar2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"/>

                    <ImageView
                        android:id="@+id/ivStar3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"/>

                    <ImageView
                        android:id="@+id/ivStar4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"/>

                    <ImageView
                        android:id="@+id/ivStar5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/star"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:gravity="center"
                    android:textColor="@color/Black"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif-condensed-medium"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
