<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llHead"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <TextView
            android:id="@+id/tvType"
            android:layout_width="match_parent"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Create menu"
            android:textColor="@color/Black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ripple_effect_white"
            android:gravity="center"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:layout_width="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_backspace_black_24dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSettings"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ripple_effect_white"
            android:layout_alignParentEnd="true"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_settings_black_24dp"/>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/llOpts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llHead"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvOpen"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="10dp"
            android:padding="50dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/tvOpen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:text="Open"
                android:background="@drawable/ripple_effect_green"
                android:textColor="@color/Black"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvUnavailable"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="3dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="10dp"
            android:padding="50dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/tvUnavailable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:text="Unavailable"
                android:background="@drawable/ripple_effect_yellow"
                android:textColor="@color/Black"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cvClosed"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="3dp"
            android:layout_alignParentEnd="true"
            android:fontFamily="sans-serif-medium"
            android:layout_margin="10dp"
            android:padding="50dp"
            app:cardCornerRadius="10dp">
            <TextView
                android:id="@+id/tvClosed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:text="Close"
                android:background="@drawable/ripple_effect_red"
                android:textColor="@color/Black"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:layout_below="@+id/llOpts"
        android:scrollbars="vertical"
        />
</RelativeLayout>