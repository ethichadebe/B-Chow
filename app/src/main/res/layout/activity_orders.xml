<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/llHead"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/tvType"
            android:layout_width="match_parent"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="Create menu"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="?attr/actionBarSize"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ripple_effect"
            android:gravity="center"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:layout_width="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_keyboard_backspace_black_24dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvEdit"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:background="@drawable/ripple_effect"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:textColor="@color/White"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:layout_below="@id/llHead"
        android:columnOrderPreserved="false"
        android:columnCount="1"
        android:rowCount="5">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:id="@+id/llShop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvOrderNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#347"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:15"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 19"
                    android:layout_alignParentEnd="true"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="French, Burger, Egg"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_below="@id/tvOrderNum"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMenu"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:background="#009E04"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="DONE"/>

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:background="#9E0000"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="CANCEL"/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="5dp"
            app:cardElevation="6dp"
            app:cardCornerRadius="12dp">

            <RelativeLayout
                android:id="@+id/llShop1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvOrderNum1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#347"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:10"
                    android:textSize="14sp"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvPrice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 15.50"
                    android:layout_alignParentEnd="true"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvMenu1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="French, Russian, Cheese, Vienna, Egg"
                    android:textSize="24sp"
                    android:gravity="center"
                    android:layout_below="@id/tvOrderNum1"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvMenu1"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDone1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:background="#009E04"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="DONE"/>

                    <Button
                        android:id="@+id/btnCancel1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_marginTop="20dp"
                        android:textAllCaps="false"
                        android:textColor="@color/White"
                        android:background="#9E0000"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif-medium"
                        android:text="CANCEL"/>
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </GridLayout>

</RelativeLayout>